<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorControlNormal">@color/theme_accent</item>
        <item name="android:windowLightStatusBar">@bool/theme_is_light</item>
        <item name="android:windowLightNavigationBar">@bool/theme_is_light</item>
    </style>

    <style name="SudFourColorIndeteminateProgressBar">
        <item name="android:layout_gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/four_color_progress_bar</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:indeterminateTint">@null</item>
        <item name="android:indeterminateTintMode">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.UPDHLog" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.PopupMenuOverlapAnchor">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
    </style>

    <style name="ToolbarTitle" parent="android:TextAppearance.Material.Title">
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
        <item name="android:textColor">@color/theme_accent</item>
    </style>
    <style name="AppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:colorBackground">@color/cardview_background</item>
        <item name="android:background">@color/cardview_background</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:dialogCornerRadius">11dp</item>
        <item name="android:buttonCornerRadius">11dp</item>
    </style>
    <style name="DialogWindowTitle">
        <item name="android:textAppearance">@style/DialogWindowTitleTextAppearance</item>
    </style>
    <style name="DialogWindowTitleTextAppearance" parent="ToolbarTitle">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AppTheme.PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/cardview_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        
    </style>

</resources>
